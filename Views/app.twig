<!DOCTYPE html>
<html>
	<head>
		{% block head %}
			<link rel="stylesheet" href="/{{global_assets}}/css/bootstrap.min.css"/>
			<link rel="stylesheet" href="/{{global_assets}}/css/app.css"/>
			<link rel="stylesheet" href="/{{global_assets}}/css/all.min.css"/>
			<script type="text/javascript" src="/{{global_assets}}/js/bootstrap.min.js"></script>
			<script type="text/javascript" src="/{{global_assets}}/js/jquery.js"></script>
			<title>
				{% block title %}{% endblock %}
				- WOW News</title>
		{% endblock %}
	</head>
	<body>
		<div class="container">
			<div class="row">
				{% include 'navbar.twig' %}
			</div>
			{# row #}
			<div class="row space">
				<div class="col-xs-6 col-lg-2">
					{% include 'sidebar.twig' %}
				</div>
				{# sidebar.col #}
				<div class="col-md-12 col-lg-10"> {% block content %}{% endblock %}
					</div>
					{# content #}
					<div class="footer" id="footer">
						{% block footer %}
							&copy; Copyright 2021 |
							<a href="https://github.com/husam-awadhi">Husam Awadhi</a>
						{% endblock %}
					</div>
					{# footer #}
				</div>
				{# row #}
			</div>
			{# container #}
			{% block js %}{% endblock %}
		</body>
	</html>
