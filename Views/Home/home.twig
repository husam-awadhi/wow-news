{% extends "app.twig" %}

{% block title %}Home{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <h1><i class="fas fa-microchip"></i> News</h1>
    <div class="row row-cols-3">
    {% for post in posts %}
        <div class="card" style="width: 16rem; margin: 6px;">
            <img src="{{post.img}}" class="card-img-top" alt="{{post.title}}">
            <div class="card-body">
            <span class="badge bg-warning text-dark">{{post.type}}</span>
                <h5 class="card-title">{{post.title}}</h5>
                <p class="card-text">{{post.synopsis}}</p>
                <a href="{{post.url}}" class="btn btn-sm btn-outline-secondary">More</a>
            </div>
        </div>
    {% endfor %}
    </div>
{% endblock %}